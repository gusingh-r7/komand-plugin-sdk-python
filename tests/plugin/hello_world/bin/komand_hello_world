#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_hello_world import connection, actions, triggers


Name = 'Hello_world'
Vendor = 'komand'
Version = '1.0.0'
Description = 'A hello world plugin for SDK testing'


class KomandHelloWorld(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name, 
                vendor=Vendor, 
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_trigger(triggers.Hello())

        self.add_trigger(triggers.ReturnBadJson())

        self.add_trigger(triggers.ThrowException())

        self.add_action(actions.Hello())

        self.add_action(actions.ReturnBadJson())

        self.add_action(actions.ThrowException())


def main():
    """Run plugin"""
    cli = komand.CLI(KomandHelloWorld())
    cli.run()


if __name__ == "__main__":
    main()
