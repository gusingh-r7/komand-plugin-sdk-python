#!/usr/bin/env python
# GENERATED BY KOMAND SDK - DO NOT EDIT
import komand
from komand_foobar import connection, actions, triggers


Name = 'Foobar'
Vendor = 'komand'
Version = '0.1.0'
Description = 'foobar plugin.'


class KomandFoobar(komand.Plugin):
    def __init__(self):
        super(self.__class__, self).__init__(
                name=Name, 
                vendor=Vendor, 
                version=Version,
                description=Description,
                connection=connection.Connection()
                )
        self.add_trigger(triggers.EmitGreeting())

        self.add_action(actions.Respond())


def main():
    """Run plugin"""
    cli = komand.CLI(KomandFoobar())
    cli.run()


if __name__ == "__main__":
    main()
